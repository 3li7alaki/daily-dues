# Supabase (Required)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Resend (Optional - for invite emails, invites work without it via link copy)
RESEND_API_KEY=re_your_api_key

# App URL (used for invite links in emails)
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app

# Slack Webhook (Optional - for notifications)
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Supabase Storage S3 Protocol (Optional - for avatar uploads)
SUPABASE_STORAGE_ENDPOINT=https://your-project.storage.supabase.co/storage/v1/s3
SUPABASE_STORAGE_REGION=ap-south-1
